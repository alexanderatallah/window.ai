{
  "name": "window-extension",
  "displayName": "Window AI",
  "version": "0.0.21",
  "private": true,
  "description": "Use your own AI models on the web",
  "author": "Alex Atallah <alexander.atallah@gmail.com>",
  "scripts": {
    "start": "next start",
    "dev": "plasmo dev",
    "stage": "plasmo dev --no-cs-reload",
    "build": "plasmo build --no-minify --no-hoist",
    "package": "plasmo package"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "@plasmohq/messaging": "^0.3.3",
    "@plasmohq/storage": "^1.6.1",
    "@types/chrome": "^0.0.237",
    "@types/webextension-polyfill": "^0.10.0",
    "@vespaiach/axios-fetch-adapter": "github:alexanderatallah/axios-fetch-adapter",
    "@xenova/transformers": "^2.17.2",
    "axios": "^1.4.0",
    "axios-retry": "^3.5.0",
    "object-hash": "^3.0.0",
    "plasmo": "^0.74.2",
    "puro": "^0.8.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "uuid": "^9.0.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "@plasmohq/rps": "^1.8.6",
    "@types/node": "20.2.5",
    "@types/object-hash": "^3.0.2",
    "@types/react": "18.2.7",
    "@types/react-dom": "18.2.4",
    "@types/uuid": "^9.0.1",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.24",
    "prettier": "2.8.8",
    "tailwindcss": "3.3.2",
    "typescript": "5.0.4",
    "window.ai": "workspace:*"
  },
  "manifest": {
    "host_permissions": [
      "file://*/*",
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "unlimitedStorage"
    ]
  }
}
