{
  "name": "window-extension",
  "displayName": "Window AI",
  "version": "0.0.4",
  "description": "Use your own AI models on the web",
  "author": "Alex Atallah <alexander.atallah@gmail.com>",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build --no-minify --no-hoist",
    "package": "plasmo package"
  },
  "dependencies": {
    "@heroicons/react": "^2.0.16",
    "@plasmohq/messaging": "^0.1.6",
    "@plasmohq/storage": "^1.3.1",
    "@types/chrome": "^0.0.224",
    "@types/webextension-polyfill": "^0.10.0",
    "@vespaiach/axios-fetch-adapter": "github:alexanderatallah/axios-fetch-adapter",
    "axios": "^1.3.4",
    "axios-retry": "^3.4.0",
    "object-hash": "^3.0.0",
    "plasmo": "0.67.4",
    "puro": "^0.8.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "uuid": "^9.0.0",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "eslint-config-custom": "workspace:*",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.3",
    "@plasmohq/rps": "^1.8.4",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@types/node": "18.15.3",
    "@types/object-hash": "^3.0.2",
    "@types/react": "18.0.28",
    "@types/react-dom": "18.0.11",
    "@types/uuid": "^9.0.1",
    "autoprefixer": "^10.4.14",
    "postcss": "^8.4.21",
    "prettier": "2.8.4",
    "tailwindcss": "^3.2.7",
    "typescript": "4.9.5"
  },
  "manifest": {
    "host_permissions": [
      "file://*/*",
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "storage"
    ]
  }
}
