{
  "name": "root",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "cross-env FORCE_COLOR=1 turbo run build",
    "dev": "cross-env FORCE_COLOR=1 turbo run dev --parallel",
    "lint": "cross-env FORCE_COLOR=1 turbo run lint",
    "test": "cross-env FORCE_COLOR=1 turbo run test",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "package": "turbo run package",
    "publish-packages": "cross-env FORCE_COLOR=1 turbo run build lint test --filter @windowai/client && changeset version && changeset publish"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0",
    "@manypkg/cli": "^0.20.0",
    "cross-env": "7.0.3",
    "eslint": "8.38.0",
    "eslint-config-next": "13.3.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-turbo": "1.9.1",
    "eslint-plugin-react": "7.32.2",
    "prettier": "^2.8.7",
    "turbo": "1.9.3",
    "typescript": "5.0.4"
  },
  "pnpm": {
    "overrides": {
      "svgo": "3.0.2"
    }
  },
  "packageManager": "pnpm@7.18.2",
  "keywords": [],
  "license": "MIT"
}
